* {
    overflow: auto;
}

html, body, #outer {
    height: 99%;
    width: 99%;
    font-family: sans-serif;
}

.roundedBox {
  background: rgb(247, 247,247);
  border: 3px solid rgb(205, 205, 205);
  border-radius: 10px;
  padding: 1em;
  margin-bottom: 2em;
}

h1 {
  font-size: 3em;
}

h2 {
  margin-top: 0;
  margin-bottom: 1em;
}

img.icon {
  float: left;
  margin-right: 10px;
}

input {
  font-size: 2em;
  margin-bottom: 1em;
}

#browserHeader {
    width: 99%;
}

#browserContentArea, #contentFrame {
    height: 95%;
    width: 99%;
}

#startPage {
    height: 99%;
    width: 99%;
}

#browser {
    height: 0;
}

